@model UzlezzBlogs.Pages.Views.Pagination

@{
    int startPage = Math.Max(Model.PageIndex - Model.MaxPagesToShow, 1);
    int endPage = Math.Min(Model.PageIndex + Model.MaxPagesToShow, Model.TotalPages);
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link" href="@Model.GenerateUrl(Model.PageIndex - 1)" hydro-link>Previous</a>
        </li>

        <li class="page-item @(Model.PageIndex == 1 ? "active" : "")">
            <a class="page-link" href="@Model.GenerateUrl(1)" hydro-link>1</a>
        </li>

        @if (startPage > 2)
        {
            <li class="page-item disabled"><span class="page-link">...</span></li>
        }

        @for (int i = startPage; i <= endPage; i++)
        {
            if (i != 1 && i != Model.TotalPages)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")" aria-current="@(i == Model.PageIndex ? "page" : null)">
                    <a class="page-link" href="@Model.GenerateUrl(i)" hydro-link>@i</a>
                </li>
            }
        }

        @if (endPage < Model.TotalPages - 1)
        {
            <li class="page-item disabled"><span class="page-link">...</span></li>
        }

        @if (Model.TotalPages > 1)
        {
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "active" : "")">
                <a class="page-link" href="@Model.GenerateUrl(Model.TotalPages)" hydro-link>@Model.TotalPages</a>
            </li>
        }

        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Model.GenerateUrl(Model.PageIndex + 1)" hydro-link>Next</a>
        </li>
    </ul>
</nav>